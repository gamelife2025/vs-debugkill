{
  "name": "debugkill",
  "displayName": "debugkill",
  "description": "Send a signal to terminate the debug process",
  "version": "1.0",
  "publisher": "gamelife2025",
  "author": "gamelife2025 <noreply@gamelife2025.dev>",
  "engines": {
    "vscode": "^1.99.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onDebug:go"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
            {
                "command": "extension.debugkillButton",
                "title": "KILL"
            }
        ],
        "menus": {
            "debug/toolBar": [
              {
                "command": "extension.debugkillButton",
                "group": "1_modification",
                "when": "debugType == 'go'"
              }
            ]
        },
    "activationEvents": [
        "onCommand:extension.customStopDebugging"
    ]
},
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "vsce:package": "npx vsce package",
    "vsce:publish": "npx vsce publish --pat $VSCE_TOKEN",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.99.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.28.0",
    "@typescript-eslint/parser": "^8.28.0",
    "eslint": "^9.23.0",
    "typescript": "^5.8.2",
    "ts-loader": "^9.5.2",
    "webpack": "^5.98.0",
    "webpack-cli": "^6.0.1",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}
